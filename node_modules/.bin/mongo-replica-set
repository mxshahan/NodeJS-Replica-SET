#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../mongo-replica-set/mongo-replica-set" "$@"
  ret=$?
else 
  node  "$basedir/../mongo-replica-set/mongo-replica-set" "$@"
  ret=$?
fi
exit $ret
